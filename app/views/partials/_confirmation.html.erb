<div
  id="new_message_form"
  data-controller="clipboard"
  class="h-screen
        md:h-full
        flex
        flex-col
        justify-start
        gap-6
        md:gap-8
        md:bg-white
        md:shadow-lg
        rounded-lg
        px-4
        py-8
        md:p-8
        w-full
        md:w-3/5
        md:transform
        md:transition-all
        hover:shadow-2xl"
>
  <h1 class="text-4xl font-bold text-gray-800 mb-6 border-b-2">
    Message Created!
  </h1>

  <div>
    <p class="text-2xl text-gray-800 border-b-2">
      El enlace del mensaje es:
    </p>
    <input data-clipboard-target="source" type="text" value="<%= message_url(@message) %>" readonly class="w-full bg-gray-100 border border-gray-300 rounded-lg p-2 mt-2 mb-4">
  </div>

  <div class="min-w-full flex flex-col gap-2 md:gap-4 md:flex-row justify-between">
    <button
      id="copy-link-button"
      type="button"
      data-clipboard-target="triggerButton"
      data-action="clipboard#copy"
      class="block items-center justify-center py-3 px-6 border border-transparent shadow-sm text-base font-medium rounded-full text-white bg-indigo-600 hover:bg-indigo-700 hover:scale-105 transition-transform focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
    >
      Copy link
    </button>
    <%= link_to "New message", root_path, class: "inline-flex items-center justify-center py-3 px-6 border border-transparent shadow-sm text-base font-medium rounded-full text-white bg-indigo-600 hover:bg-indigo-700 hover:scale-105 transition-transform focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
</div>
